{
  "expo": {
    "name": "Overture OSM Extractor",
    "slug": "overture-extractor-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "overture-extractor",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.overture.extractor.mobile",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to center the map and set extraction start points.",
        "NSLocationAlwaysUsageDescription": "This app uses your location to center the map."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.overture.extractor.mobile",
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      "expo-router",
      "expo-location",
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox",
          "RNMapboxMapsDownloadToken": "MAPBOX_DOWNLOAD_TOKEN"
        }
      ]
    ]
  }
}
